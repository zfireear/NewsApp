<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="65dp"
            android:paddingTop="1dp"
            android:paddingLeft="4dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="@string/empty"
            />

        <RelativeLayout
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="68dp">

            <TextView
                android:id="@+id/news_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="4dp"
                android:textStyle="bold"
                android:text="hiangdnfaljiadnk" />

            <TextView
                android:id="@+id/news_summary"
                android:paddingTop="1dp"
                android:paddingBottom="2dp"
                android:layout_below="@id/news_title"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="hiangdnfaljiadnkfjfaingaldnfasidognkahiangdnfaljiadnkfjfaingaldnfasidognkahiangdnfaljiadnkfjfaingaldnfasidognka"
                />

        </RelativeLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/news_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@id/head"
        android:layout_alignParentLeft="true"
        android:textSize="12sp"
        android:text="1111111" />

    <TextView
        android:id="@+id/news_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:layout_below="@id/head"
        android:layout_toRightOf="@id/news_from"
        android:textSize="12sp"
        android:text="2222222" />

    <TextView
        android:id="@+id/news_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:layout_below="@id/head"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:text="3333333" />

    <View
        android:layout_below="@id/news_comment"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:paddingTop="2dp"
        android:background="@mipmap/spilt_line"
        android:paddingBottom="2dp"/>

</RelativeLayout>